{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
     "emitDecoratorMetadata": true,
    "module": "commonjs",
     "rootDir": "./src/",
     "baseUrl": "./",
     "paths": {
     "*": ["node_modules/*"]
     },
    "experimentalDecorators": true,
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "declaration": true,
     "outDir": "./dist",
     "removeComments": true,
     "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "migrations",
  ]
}
